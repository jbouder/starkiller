# Application
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS (must be JSON array format)
CORS_ORIGINS=["http://localhost:5173"]

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/starkiller

# LLM Configuration
# Supported providers: anthropic, gemini, bedrock
LLM_PROVIDER=anthropic

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-key
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# AWS Bedrock (Claude via AWS)
# Use cross-region inference profile IDs (e.g., us.anthropic.* or eu.anthropic.*)
# See: https://docs.aws.amazon.com/bedrock/latest/userguide/cross-region-inference.html
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_ACCESS_KEY_ID=
BEDROCK_SECRET_ACCESS_KEY=
BEDROCK_SESSION_TOKEN=
